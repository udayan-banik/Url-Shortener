<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <title>URL Shrinker</title>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center">URL Shrinker</h1>

      <form action="/shortUrls" method="POST" class="row g-3">
        <div class="col-10">
          <label for="fullUrl" class="visually-hidden">Url</label>
          <input
            required
            placeholder="Shrink your link"
            type="url"
            name="fullUrl"
            id="fullUrl"
            class="form-control col mr-2"
          />
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success mb-3">Shrink</button>
        </div>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td>
              <a href="<%= shortUrl.short %>">
                <!-- <strong id="url"></strong
                > -->
                <strong><%= shortUrl.miniurl %><%= shortUrl.short %></strong></a
              >
            </td>
            <td><%= shortUrl.clicks %></td>
            <% }) %>
          </tr>
        </tbody>
      </table>
    </div>
    <script>
      document.getElementById("url").innerHTML = window.location.href;
    </script>
  </body>
</html>
